<!-- Note list container -->
    <div class = "note-list-container">
        <ul id = "note-list-fuction">
            <li><%= link_to '', new_note_path, class: 'icon-add-outline' -%></li>
            <li><%= link_to '',  note_path(@note), method: :delete, data: { confirm: 'Are you sure?' }, class: "icon-trash" %></li>
        </ul>
        
        <div class = "search">
            <input id = "search" name = "search" type = "text" placeholder = "Search" />
        </div>
        <div class = "note-list">
            <ul>
                <% @notes.reverse_each do |note| %>
                    <li>
                        <% if (note.title == @note.title && note.text ==  @note.text) %>
                            <%= link_to note.title, note_path(note), :class=> "active" %>
                        <% else %>
                            <%= link_to note.title, note_path(note) %>
                        <% end %> 
                    </li> 
                <% end %>
                
            </ul>
        </div>
    </div>