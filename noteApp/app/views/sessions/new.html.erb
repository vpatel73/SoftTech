<h1 class = "text-center">Login</h1>
    <div class = "login-form">
        <%= form_for :session, url: login_path do |f| %>
            
            <div class = "form-group"> 
                <%= f.label :email %>
                <%= f.email_field :email %>
            </div>
        
            <div class = "form-group">
                <%= f.label :password %>
                <%= f.password_field :password %>
            </div>
            
            <div class = "form-group">
                <%= f.submit "Sign in" %>
            </div>
            
            <%= link_to 'Does note have an account', 'signup' %>
            
        <% end %>
    
    </div>